@model List<Entities.Concrete.DriverInformation>

<script src="~/assets/js/pages/crud/ktdatatable/base/html-table2.js"></script>

<!--begin: Search Form-->
<!--begin::Search Form-->
<div class="mb-7">
    <div class="row align-items-center">
        <div class="col-lg-9 col-xl-8">
            <div class="row align-items-center">
                <div class="col-md-4 my-2 my-md-0">
                    <div class="input-icon">
                        <input type="text" class="form-control" placeholder="Ara..." id="kt_datatable_search_query2" />
                        <span>
                            <i class="flaticon2-search-1 text-muted"></i>
                        </span>
                    </div>
                </div>

                @await Component.InvokeAsync("SessionSearchList")

            </div>
        </div>
    </div>
</div>
<!--end::Search Form-->
<!--end: Search Form-->
<!--begin: Datatable-->
<table class="datatable datatable-bordered datatable-head-custom table-hover" id="kt_datatable2">
    <thead class="datatable-head">
        <tr>
            <th title="Seç">Seç</th>
            <th title="Adı">Adı</th>
            <th title="Soyadı">Soyadı</th>
            <th title="TC Kimlik No">TC Kimlik No</th>
            <th title="Donem">Donem</th>
            <th title="Branş">Branş</th>
            <th title="Telefon 1">Telefon 1</th>
            <th title="Şube">Şube</th>
            <th title="Kurs Ücreti">Kurs Ücreti</th>
            <th title="Id">Id</th>
        </tr>
    </thead>
    <tbody class="datatable-body">
        @foreach (var dr in Model)
        {
        <tr>
            <td>
                <div width="50">
                    <button class="btn btn-sm btn-clean" title="Seç" onclick="js_addDriverById(@dr.Id)">
                        <i class="flaticon2-add"></i> Seç
                    </button>
                </div>
            </td>
            <td>@dr.Name</td>
            <td>@dr.Surname</td>
            <td>@dr.IdentityNo</td>
            <td>@dr.Session.Name - @dr.Session.Year-@dr.Session.Sequence</td>
            <td>@dr.Branch.Name</td>
            <td>@dr.Phone1</td>
            <td>@dr.Office.Name</td>
            <td>@string.Format("{0:n2}", @dr.CourseFee)</td>
            <td>@dr.Id</td>
        </tr>
        }
    </tbody>
</table>
<!--end: Datatable-->

