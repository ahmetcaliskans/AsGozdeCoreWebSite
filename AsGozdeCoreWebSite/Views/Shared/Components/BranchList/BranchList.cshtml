@model dynamic


<div class="form-group row fv-plugins-icon-container">
    <label class="col-xl-3 col-lg-3 col-form-label">Branş</label>
    <div class="col-lg-9 col-xl-9">
        <select class="form-control is-valid" name="selectBranch" id="selectBranch">
            @if (Model.Branch != null)
            {

                @foreach (var branch in Model.Branch as List<Entities.Concrete.Branch>)
                {
                    if (branch.Id == (int)Model.SelectedId)
                    {
                        <option selected="" value="@branch.Id">@branch.Name</option>
                    }
                    else
                    {
                        <option value="@branch.Id">@branch.Name</option>
                    }
                }

            }
        </select>

        <!--<span class="form-text text-muted">Lütfen Bir Branş Seçiniz !</span>-->
        <div class="fv-plugins-message-container"></div>
    </div>
</div>