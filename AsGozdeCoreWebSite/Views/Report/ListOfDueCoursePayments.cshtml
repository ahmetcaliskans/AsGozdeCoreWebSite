            <!--begin: Datatable-->
            <table class="datatable datatable-bordered datatable-head-custom table-hover" id="kt_datatable">
                <thead class="datatable-head">
                    <tr>
                        <th title="Adı">Adı</th>
                        <th title="Soyadı">Soyadı</th>
                        <th title="Kalan Borç">Kalan Borç</th>
                        <th title="Ödeme Planı Tutarı">Ödeme Planı Tutarı</th>
                        <th title="Ödeme Planı Tarihi">Ödeme Planı Tarihi</th>
                        <th title="Kurs Ücreti">Kurs Ücreti</th>
                        <th title="Donem">Donem</th>
                        <th title="Branş">Branş</th>
                        <th title="Şube">Şube</th>
                    </tr>
                </thead>
                <tbody class="datatable-body">
                    @foreach (var dr in Model)
                    {
                    <tr>
                        <td>@dr.Name</td>
                        <td>@dr.Surname</td>
                        <td>@string.Format("{0:n2}", @dr.DebitinMonth)</td>
                        <td>@string.Format("{0:n2}", @dr.Amount)</td>
                        <td>@dr.PaymentDate.Date.ToShortDateString()</td>
                        <td>@string.Format("{0:n2}", @dr.CourseFee)</td>
                        <td>@dr.SessionName - @dr.SessionYear</td>
                        <td>@dr.BranchName</td>
                        <td>@dr.OfficeName</td>

                    </tr>
                    }
                </tbody>
            </table>
